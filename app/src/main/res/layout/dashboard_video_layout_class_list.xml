<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="@dimen/three_hundred_dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white_color"
            app:cardCornerRadius="@dimen/five_dp"
            app:cardElevation="@dimen/five_dp"
            android:id="@+id/card_liveVideo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">
                <ImageView
                    android:id="@+id/banner_image"
                    android:layout_width="match_parent"
                    android:src="@drawable/slider04"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_height="130dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3"
                    android:layout_margin="@dimen/five_dp"
                    android:layout_gravity="center"
android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".1"
                        android:layout_marginBottom="@dimen/five_dp"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/seven_dp"
                        android:src="@drawable/ic_dot_arrow"
                        app:tint="@color/theme_purple"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/title"

android:layout_marginBottom="@dimen/five_dp"
                        android:layout_weight="2.9"
                        android:id="@+id/txt_start"
                        android:layout_gravity="center"
                        android:textSize="@dimen/twelve_sp"
                        android:textStyle="bold"


                        android:textColor="@color/black_color"
                   />

                </LinearLayout>

            </LinearLayout>






        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/sixty_dp"
        android:layout_height="@dimen/sixty_dp"
        android:background="@drawable/ribbon"
        android:layout_marginLeft="1dp"
        android:backgroundTint="@color/amber_100"
        android:layout_marginTop="4dp"
        android:rotation="-45">
        <TextView

            android:text="Free"
            android:textStyle="bold"
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/forteen_sp"

            android:textColor="@color/theme_purple"

            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="@dimen/forty_dp"





        android:layout_centerInParent="true"
        android:background="@drawable/shape_circle"
        android:layout_height="@dimen/forty_dp">
        <ImageView
            android:layout_width="@dimen/forty_dp"
            android:layout_height="@dimen/forty_dp"

            android:src="@drawable/video"/>


    </RelativeLayout>


</RelativeLayout>