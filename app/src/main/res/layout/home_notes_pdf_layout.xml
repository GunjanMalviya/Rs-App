<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
        app:cardCornerRadius="@dimen/five_dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white_color"
        app:cardElevation="@dimen/five_dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lout_pdf"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/two_dp"
                        android:background="@color/overlay_dark_10"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:padding="@dimen/ten_sp"

                    android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/image_video"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:src="@drawable/slider04"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:layout_height="@dimen/seventy_dp"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/ten_sp"
                            android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                        android:text="@string/live_class"
                                        android:textSize="@dimen/forteen_sp"
                                    android:id="@+id/classe_txt"
                                        android:textStyle="bold"
                                    android:singleLine="true"
                                        android:textColor="@color/black_color"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txt_title"
                                    android:singleLine="true"


                                    android:text="@string/date_time"
                                    android:textColor="@color/black_color"
                                    android:textSize="@dimen/twelve_sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txt_votes"

                                    android:text="@string/date_time"
                                    android:textColor="@color/black_color"
                                    android:textSize="@dimen/twelve_sp"/>


                        </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/two_dp"
                    android:background="@color/overlay_dark_10"/>
        </LinearLayout>
        </RelativeLayout>
