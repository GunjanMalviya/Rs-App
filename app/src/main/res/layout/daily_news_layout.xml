<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_video"
            android:layout_width="match_parent"

            android:src="@drawable/slider04"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_height="@dimen/one_sixty_dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_title"
            android:layout_marginTop="@dimen/ten_sp"
            android:text="@string/offline_pay"
            android:textStyle="bold"
            android:textSize="@dimen/forteen_sp"
            android:padding="@dimen/ten_sp"
            android:textColor="@color/black_color"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five_dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_date"
                android:layout_marginTop="@dimen/ten_sp"
                android:text="@string/date_time"
                android:textSize="@dimen/thirteen_sp"
                android:padding="@dimen/ten_sp"
                android:textColor="@color/overlay_dark_60"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_gkname"
                android:layout_marginTop="@dimen/ten_sp"
                android:text="@string/offline_pay"
                android:textSize="@dimen/thirteen_sp"
                android:drawableLeft="@drawable/point"
                android:drawablePadding="@dimen/five_dp"
                android:layout_marginLeft="@dimen/five_dp"
                android:padding="@dimen/ten_sp"
                android:textColor="@color/overlay_dark_60"></TextView>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/three_dp"
            android:layout_marginTop="@dimen/three_dp"
            android:background="@color/overlay_dark_20"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_sp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/offline_pay_rule1"
                android:padding="@dimen/ten_sp"
                android:textColor="@color/black_color"
                    android:id="@+id/details_txt"
                android:fontFamily="@font/poppins"

                android:textSize="@dimen/eighteen_sp"
                android:lineSpacingExtra="@dimen/ten_sp"></TextView>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_readMore"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/overlay_dark_60"
            android:layout_marginTop="@dimen/twenty_sp"
            android:drawablePadding="@dimen/five_dp"
            android:padding="@dimen/ten_sp"
           android:drawableRight="@drawable/ic_arrowright"
            android:text="@string/read_full_news"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ten_sp"

            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/overlay_dark_60"
            android:layout_marginTop="@dimen/twenty_sp"
            android:drawablePadding="@dimen/five_dp"
            android:padding="@dimen/ten_sp"
            android:layout_marginBottom="@dimen/thirty_sp"
           android:background="@color/overlay_dark_20"
            android:text="@string/read_full_news"></TextView>

    </LinearLayout>

</LinearLayout>