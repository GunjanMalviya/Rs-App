<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/seventy_dp"
    android:layout_margin="@dimen/five_dp"
    android:background="@color/pure_white"
    app:cardCornerRadius="@dimen/five_dp"
    app:cardElevation="@dimen/three_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/three_dp"
        android:orientation="horizontal"
        android:weightSum="2">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_margin="3dp"
            android:layout_weight="0.6">

            <ImageView
                android:id="@+id/banner_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/slider04"
                app:shapeAppearance="@style/CornerCut" />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:layout_marginLeft="@dimen/ten_dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Title"
                android:layout_marginTop="@dimen/two_dp"
                android:textColor="@color/black_color"
                android:textSize="@dimen/twelve_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/light_grey" />

            <LinearLayout
                android:layout_marginTop="@dimen/five_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/twelve_dp"
                    android:layout_height="@dimen/twelve_dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_access_time_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/five_dp"
                    android:text="00:23:35"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/ten_dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/thirty_dp"
                    android:text="30 July 2023"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/ten_dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
