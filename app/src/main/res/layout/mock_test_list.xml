<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/five_dp"
    app:cardElevation="@dimen/five_dp"
    android:layout_margin="@dimen/five_dp"
    app:cardBackgroundColor="@color/white_color"
    app:cardUseCompatPadding="true"
    android:id="@+id/card_preexam_subcat">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:backgroundTint="@color/blue_50"
            android:background="@drawable/primary_oval">

            <ImageView
                android:layout_width="@dimen/thirty_sp"
                android:layout_height="@dimen/thirty_sp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/exam_prepare" />
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
android:layout_weight="3"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:ellipsize="end"

                android:gravity="center_vertical"
                android:text="@string/rate"
                android:textSize="@dimen/forteen_sp"
                android:id="@+id/txt_Nm_Title"

                android:textColor="@color/black_color" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                    android:text="@string/start"
                android:layout_weight=".8"
                android:textColor="@color/white_color"
                android:textAllCaps="true"
                android:textSize="@dimen/forteen_sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/startExam"

                android:layout_margin="@dimen/five_dp"
                android:background="@drawable/round_button"

                android:paddingTop="@dimen/six_dp"
                android:paddingBottom="@dimen/six_dp"
                android:paddingLeft="@dimen/ten_sp"
                android:paddingRight="@dimen/ten_sp"
                 />


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
    <LinearLayout
        android:layout_width="@dimen/sixty_dp"
        android:layout_height="@dimen/sixty_dp"
        android:background="@drawable/ribbon"
        android:layout_marginLeft="-10dp"
        android:backgroundTint="@color/amber_50"
        android:layout_marginTop="-10dp"
        android:rotation="-45">
        <TextView

            android:text="@string/paid"
            android:textStyle="bold"
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fifteen_sp"
            android:layout_marginTop="@dimen/twenty_sp"
            android:textSize="@dimen/fifteen_sp"
            android:textColor="@color/theme_purple"

            />
    </LinearLayout>




</androidx.cardview.widget.CardView>