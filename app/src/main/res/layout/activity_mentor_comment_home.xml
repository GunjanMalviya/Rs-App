<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comments.."
                android:padding="@dimen/ten_sp"
                android:background="@color/white_color"
                android:textSize="@dimen/sixteen_sp"
                android:textColor="@color/black_color"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/sixty_dp"
                android:id="@+id/recy_exam_series"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/hundred_dp"
                android:id="@+id/lnr_layout"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:src="@drawable/no_data"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Record Found !!"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/aclonica"
                    android:textSize="@dimen/twenty_sp"
                    android:textColor="@color/blue_grey_900"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/bottomrd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/five_dp"
        android:background="@drawable/edittext_chat_bg">

        <EditText
            android:id="@+id/edt_sent1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:digits="qwertyuiopasdfghjklzxcvbnm 1234567890 QWERTYUIOPASDFGHJKLZXCVBNM ,.:;'@  "
            android:hint="Write a comment.."
            android:imeOptions="actionGo"
            android:layout_toLeftOf="@id/btn_sent1"
            android:inputType="text"
            android:singleLine="true"
            android:ems="10"
            android:textColor="@color/black_color"
            android:textColorHint="@color/black_color"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="@dimen/twenty_dp"
            android:textSize="@dimen/fifteen_sp" />

        <ImageButton
            android:id="@+id/btn_sent1"
            android:layout_width="20dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_sent"
            android:padding="3dp"></ImageButton>
    </RelativeLayout>

</RelativeLayout>