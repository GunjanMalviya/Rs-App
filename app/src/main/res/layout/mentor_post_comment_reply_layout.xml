<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white_color"
            app:cardCornerRadius="@dimen/five_dp"
            app:cardElevation="@dimen/five_dp"
            android:id="@+id/card_liveVideo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="8"
                    android:id="@+id/nav_prof"

                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userImage_imageView"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:padding="@dimen/five_dp"
                        android:layout_height="@dimen/sixty_dp"
                        app:civ_border_width="@dimen/two_dp"
                        app:civ_border_color="@color/theme_purple"
                        android:src="@drawable/ic_baseline_account_circle_24" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="6.5"
android:layout_gravity="center"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/ten_sp"
                            android:text="JK"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/forteen_sp"
                            android:id="@+id/txt_userNm"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_medium"
                            android:paddingLeft="@dimen/ten_sp"
                            android:text="@string/time"
                            android:textColor="@color/blue_grey_800"
                            android:textSize="@dimen/twelve_sp"
                                android:id="@+id/txt_time"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
android:layout_marginLeft="@dimen/forty_dp"

                    android:padding="@dimen/ten_sp"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/time"
                        android:fontFamily="@font/poppins"
                        android:layout_weight="1.8"
                        android:id="@+id/txt_title"
                        android:layout_gravity="center"
                        android:textSize="@dimen/sixteen_sp"
                        android:textStyle="bold"


                        android:textColor="@color/black_color"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                 android:weightSum="4"
                    android:visibility="gone"
                  android:layout_marginLeft="@dimen/forty_dp"
                    android:padding="@dimen/three_dp"
                    android:layout_marginTop="@dimen/two_dp"
                    android:orientation="horizontal">
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1.5"
    android:id="@+id/llout_upvotes"

    android:layout_height="wrap_content"
    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="@dimen/twenty_sp"
                        android:src="@drawable/ic_like_n"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins"
                        android:textSize="@dimen/twelve_sp"
                        android:textColor="@color/overlay_dark_50"
                        android:text="UPVOTES"/>
</LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2.0"
                        android:id="@+id/llout_comments"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="@dimen/twenty_sp"

                        android:src="@drawable/ic_baseline_reply_24"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/twelve_sp"
                        android:textColor="@color/overlay_dark_50"
                        android:fontFamily="@font/poppins"
                        android:text="REPLY"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_marginLeft="@dimen/thirty_five_sp"
                    android:background="@color/overlay_dark_30"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>



</RelativeLayout>