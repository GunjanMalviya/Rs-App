<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prepare_exam"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="@dimen/ten_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_shape">
            <RelativeLayout
                android:id="@+id/rl_user_pic"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:civ_border_color="@color/theme_purple"
                    app:civ_border_width="@dimen/two_dp"

                    android:src="@drawable/ic_baseline_account_circle_24"
                    android:scaleType="centerCrop"
                    android:padding="0dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_profile"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent">
                <RelativeLayout
                    android:id="@+id/rl_edit_profile_pic"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="@dimen/ten_sp"
                    android:layout_marginRight="@dimen/ten_sp"
                    android:background="@drawable/rounded_bg"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:tint="#fff"
                        android:padding="2dp"
                        android:src="@drawable/camera"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_sp"
                android:orientation="vertical"
                android:padding="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/white_color"
                    app:cardBackgroundColor="@color/white_color"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/ic_user"
                            android:backgroundTint="@color/theme_purple" />

                        <EditText
                            android:id="@+id/et_pro_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/opensans_semibold"
                            android:gravity="center|left"
                            android:hint="Enter Name"
                            android:paddingLeft="5dp"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/black_dark"
                            android:textSize="15sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/white_color"
                    app:cardBackgroundColor="@color/white_color"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/ic_smartphone"
                            android:backgroundTint="@color/theme_purple"></ImageView>

                        <EditText
                            android:id="@+id/et_pro_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:enabled="false"
                            android:background="@android:color/transparent"
                            android:digits="1234567890"
                            android:fontFamily="@font/opensans_semibold"
                            android:gravity="center|left"
                            android:hint="Enter Mobile Number"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:paddingLeft="5dp"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/black_dark"
                            android:textSize="15sp"></EditText>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/white_color"
                    app:cardBackgroundColor="@color/white_color"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/ic_baseline_mail_outline_24"
                            android:backgroundTint="@color/theme_purple"></ImageView>

                        <EditText
                            android:id="@+id/et_pro_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"

                            android:fontFamily="@font/opensans_semibold"
                            android:gravity="center|left"
                            android:hint="Enter Email"
                            android:inputType="textEmailAddress"

                            android:paddingLeft="5dp"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/black_dark"
                            android:textSize="15sp"></EditText>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/white_color"
                    app:cardBackgroundColor="@color/white_color"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:weightSum="5"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"

                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/ic_baseline_location_city_24"
                            android:backgroundTint="@color/theme_purple"></ImageView>

                        <EditText
                            android:id="@+id/et_pro_state"
                            android:layout_width="wrap_content"
                            android:layout_weight="5"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/opensans_semibold"
                            android:gravity="center|left"
                            android:hint="@string/live_location"
                            android:inputType="text"
                            android:maxLines="4"
                            android:minLines="8"
                            android:paddingLeft="5dp"
                            android:textColor="@color/black_color"
                            android:textColorHint="@color/black_dark"
                            android:textSize="15sp"></EditText>
                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:id="@+id/img_live_location"

                            android:layout_gravity="center"
                        android:layout_marginRight="@dimen/fifteen_sp"
                            android:background="@drawable/ic_baseline_my_location_24"
                            android:backgroundTint="@color/theme_purple"></ImageView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="2dp"

                    android:background="@color/white_color"
                    app:cardBackgroundColor="@color/white_color"
                    app:cardCornerRadius="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_purple"

                        android:layout_marginLeft="@dimen/twenty_sp"
                        android:layout_marginBottom="@dimen/ten_sp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:textStyle="bold"

                        android:textSize="@dimen/sixteen_sp"
                        android:text="@string/gender"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_sp"
                        android:layout_marginBottom="@dimen/ten_sp"
                        android:orientation="horizontal">
                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:weightSum="3"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/twenty_sp"
                            android:layout_marginRight="@dimen/twenty_sp"


                            android:layout_marginTop="@dimen/ten_sp"
                            >

                            <RadioButton
                                android:id="@+id/radio_male"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_color"
                                android:buttonTint="@color/theme_purple"
                                android:text="@string/male" />

                            <RadioButton
                                android:id="@+id/radio_female"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:textColor="@color/black_color"
                                android:buttonTint="@color/theme_purple"

                                android:layout_height="wrap_content"
                                android:text="@string/female" />

                        </RadioGroup>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/white_color"
                    app:cardBackgroundColor="@color/white_color"
                    app:cardCornerRadius="20dp">

                </androidx.cardview.widget.CardView>


                <!--   <EditText
                       android:visibility="gone"
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:layout_marginBottom="5dp"
                       android:layout_marginTop="4dp"
                       android:hint="Name"
                       android:padding="10dp"
                       android:textSize="14sp"
                       android:background="@drawable/border_rounded"
                       android:ems="10"
                       android:inputType="text" />
                   <EditText
                       android:visibility="gone"
                       android:layout_width="match_parent"
                       android:layout_marginTop="30dp"
                       android:layout_height="50dp"
                       android:layout_marginBottom="5dp"
                       android:background="@drawable/border_rounded"
                       android:ems="10"
                       android:padding="10dp"
                       android:hint="Mobile No."
                       android:textSize="14sp"
                       android:inputType="number"
                       android:maxLength="15" />
                   <EditText
                       android:visibility="gone"
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:textSize="14sp"
                       android:hint="Email"
                       android:padding="10dp"
                       android:layout_marginTop="30dp"
                       android:layout_marginBottom="5dp"
                       android:background="@drawable/border_rounded"
                       android:ems="10" />
     -->

                <RelativeLayout
                    android:id="@+id/btn_pro_edit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="30dp"
                    android:background="@drawable/btn_rounded_primary"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="center"
                        android:text="Save"
                        android:textAllCaps="true"
                        android:textColor="#fff"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>