<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"

    android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                  android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
android:layout_marginLeft="@dimen/ten_sp"
                android:layout_marginRight="@dimen/ten_sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1."
                    android:textStyle="bold"
                    android:layout_weight="0.8"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/sno"
                    android:visibility="gone"
                    android:fontFamily="@font/aclonica"
                    android:textColor="@color/theme_purple"
                    android:textSize="@dimen/forty_dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:layout_weight="4.2"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/name"

                    android:textColor="@color/black_color"
                    android:textSize="@dimen/thirty_sp"/>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerviewTopic"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginTop="@dimen/ten_sp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>