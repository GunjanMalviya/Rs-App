<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey"

    tools:context="com.rankerspoint.academy.Activity.ViewAll_QuizTestSeries">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/ten_sp"
            android:id="@+id/card_mock_test"
            app:cardBackgroundColor="@color/white_color"

            android:layout_margin="@dimen/five_dp"
            app:cardCornerRadius="@dimen/ten_sp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mock_test"
                android:textSize="@dimen/forteen_sp"
                android:gravity="center"
                android:id="@+id/txt_mock"
                android:paddingLeft="@dimen/ten_sp"
                android:paddingRight="@dimen/ten_sp"

                android:paddingTop="@dimen/five_dp"
                android:paddingBottom="@dimen/five_dp"
                android:layout_gravity="center"
                android:textColor="@color/blue_grey_900"
                ></TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/ten_sp"
            android:id="@+id/card_course_click"
            app:cardBackgroundColor="@color/white_color"

            android:layout_margin="@dimen/five_dp"
            app:cardCornerRadius="@dimen/ten_sp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quiz"
                android:textSize="@dimen/forteen_sp"
                android:gravity="center"
                android:id="@+id/txt_quiz"
                android:paddingLeft="@dimen/ten_sp"
                android:paddingRight="@dimen/ten_sp"

                android:paddingTop="@dimen/five_dp"
                android:paddingBottom="@dimen/five_dp"
                android:layout_gravity="center"
                android:textColor="@color/blue_grey_900"
                ></TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_mock_series"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/ten_sp"
        android:layout_marginBottom="@dimen/ten_sp"
        android:layout_marginLeft="@dimen/ten_sp"
        android:layout_marginRight="@dimen/ten_sp"
android:visibility="gone"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="center"
        android:gravity="center"

        android:layout_marginTop="@dimen/hundred_dp"
        android:id="@+id/lnr_layout"
        android:orientation="vertical">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/no_data"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Record Found !!"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/aclonica"
            android:textSize="@dimen/twenty_sp"
            android:textColor="@color/blue_grey_900"/>
    </LinearLayout>

</LinearLayout>