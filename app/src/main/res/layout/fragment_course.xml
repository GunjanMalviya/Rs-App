<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/three_dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white_color"
                android:layout_height="@dimen/fifty_dp"
                android:layout_weight="2">

                <androidx.appcompat.widget.SearchView
                    android:layout_width="0dp"
                    android:tooltipText="Search for"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:layout_marginBottom="@dimen/eight_dp"
                    android:layout_marginRight="@dimen/five_dp"
                    android:background="@drawable/btn_light_bg"
                    android:backgroundTint="@color/indigo_50"
                    android:layout_weight="1.4"/>

                <Button
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:text="Study"
                    android:layout_margin="@dimen/eight_dp"
                    android:background="@drawable/btn_light_bg"
                    android:textSize="@dimen/forteen_sp"
                    android:textColor="@color/pure_white"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/three_dp"
                android:background="@color/white_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:layout_marginBottom="@dimen/ten_dp"
                    />

                <LinearLayout
                    android:id="@+id/layout_dots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_gradient_soft"
                    android:gravity="center"
                    android:orientation="horizontal" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginTop="@dimen/three_dp"
                android:background="@color/white_color"
                android:orientation="horizontal"
                android:padding="@dimen/eight_dp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:background="@drawable/border_rounded_sylla"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/sixteen_dp"
                        android:layout_height="@dimen/sixteen_dp"
                        android:layout_gravity="center"
                        android:src="@drawable/filter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/eight_dp"
                        android:gravity="center"
                        android:text="Filter"
                        android:textColor="@color/black_dark"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_grey"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/sixteen_dp"
                            android:layout_height="@dimen/sixteen_dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_allpost"
                            android:backgroundTint="@color/theme_purple" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/eight_dp"
                            android:gravity="center"
                            android:text="All"
                            android:textColor="@color/theme_purple"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/eight_dp"
                        android:layout_marginRight="@dimen/eight_dp"
                        android:background="@color/theme_purple" />


                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="GS Foundation"
                    android:textColor="@color/black_dark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Offline"
                    android:textColor="@color/black_dark"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:background="@color/white_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_sp"
                    android:paddingLeft="@dimen/ten_sp"
                    android:textColor="@color/black_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!--
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card_course_click"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/five_dp"
                                    app:cardBackgroundColor="@color/white_color"
                                    app:cardCornerRadius="@dimen/ten_sp"
                                    app:cardElevation="@dimen/ten_sp">


                                    <TextView
                                        android:padding="4dp"
                                        android:id="@+id/txtTitleCourse"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@color/theme_purple"
                                        android:gravity="center"
                                        android:text="@string/title"
                                        android:textColor="@color/white_color"
                                        android:textSize="@dimen/sixteen_sp" />
                                </androidx.cardview.widget.CardView>
                -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recy_moreclasses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recy_subCourse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/five_dp"
                        android:visibility="visible"


                        />

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/llout_viewAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/fifteen_sp"
                        android:background="@drawable/button_border"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/myriadpro_bold"
                            android:gravity="center"
                            android:paddingTop="@dimen/fifteen_sp"
                            android:paddingBottom="@dimen/fifteen_sp"
                            android:text="VIEW ALL"
                            android:textColor="@color/theme_purple"
                            android:textSize="@dimen/sixteen_sp"

                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrowright"
                            app:tint="@color/theme_purple" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_sp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:text="@string/upcomingc"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/sixteen_sp"

                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/five_dp"
                            android:text=""
                            android:textColor="@color/black_color"

                            android:textSize="@dimen/sixteen_sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_image_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_marginTop="@dimen/ten_sp"
                        android:layout_marginBottom="@dimen/ten_sp"
                        android:visibility="gone" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/six_dp"
                        android:visibility="gone"
                        app:cardElevation="@dimen/ten_sp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@color/help_bg"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/fifteen_sp"
                                android:orientation="horizontal"
                                android:weightSum="5">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_weight="1.5"
                                    android:src="@drawable/help_call" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/talk_help"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"


                                        android:paddingRight="@dimen/ten_sp"
                                        android:text="@string/classes"
                                        android:textColor="@color/black_color"
                                        android:textSize="@dimen/fifteen_sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingRight="@dimen/ten_sp"
                                        android:text="@string/subscribe"
                                        android:textColor="@color/blue_grey_900"
                                        android:textSize="@dimen/twelve_sp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/talk_lbt_out"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/thirty_sp"
                                android:layout_marginTop="@dimen/fifteen_sp"
                                android:layout_marginRight="@dimen/thirty_sp"
                                android:layout_marginBottom="@dimen/twenty_sp"
                                android:background="@drawable/learn_quiz_bg"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_copy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/myriadpro_semibold"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/twelve_sp"
                                    android:paddingBottom="@dimen/twelve_sp"
                                    android:text="@string/talk"
                                    android:textColor="@color/white_color"
                                    android:textSize="@dimen/sixteen_sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/two_dp"
                        android:layout_marginLeft="@dimen/fifteen_sp"
                        android:layout_marginTop="@dimen/ten_sp"
                        android:layout_marginRight="@dimen/fifteen_sp"
                        android:background="@color/blue_grey_200" />

                    <TextView
                        android:id="@+id/txt_q"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/ten_sp"
                        android:gravity="start"
                        android:paddingLeft="@dimen/twenty_sp"
                        android:paddingTop="@dimen/twelve_sp"

                        android:text="@string/faq"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/sixteen_sp"


                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/six_dp"
                        app:cardElevation="@dimen/ten_sp"
                        android:visibility="gone"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten_sp"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <TextView
                                android:id="@+id/faq_txt_help"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3.2"
                                android:text="@string/fcissue"
                                android:textColor="@color/black_color"
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|bottom"
                                android:layout_weight="1.8"
                                android:drawableRight="@drawable/ic_outline_arrow_forward_24"
                                android:drawablePadding="@dimen/five_dp"
                                android:gravity="right"
                                android:text="@string/detailfaq"
                                android:textColor="@color/theme_purple"
                                android:textSize="@dimen/forteen_sp"

                                android:textStyle="bold" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>