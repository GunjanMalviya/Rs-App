<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">


    <ImageView
        android:layout_width="@dimen/sixty_dp"
        android:layout_height="@dimen/sixty_dp"
        android:layout_margin="@dimen/ten_dp"
        android:src="@drawable/my_logo" />

    <ImageView
        android:id="@+id/iv_study"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/study" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:padding="@dimen/spacing_mlarge">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fifty_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="OTP "
                android:textAlignment="center"
                android:textColor="@color/theme_purple"
                android:textSize="@dimen/twenty_four_dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Verification"
                android:textAlignment="center"
                android:textColor="@color/black_color"
                android:textSize="@dimen/twenty_two_sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Enter the Code sent on"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/ten_dp"
            android:textColor="@color/black_dark"
            android:textSize="@dimen/sixteen_sp"
            android:textStyle="bold" />

        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/eighty_dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/thirty_dp"
            android:textColor="@color/theme_purple"
            app:bar_active_color="@color/theme_purple"
            app:bar_enabled="true"
            app:bar_error_color="@color/red"
            app:bar_height="2dp"
            app:bar_inactive_color="@color/grey_10"
            app:box_margin="@dimen/ten_dp"
            app:height="40dp"
            app:length="4"
            app:otp_box_background="@color/grey_10"
            app:otp_text_size="24dp"
            app:width="40dp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:text="00:00"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/theme_purple"
            android:textSize="@dimen/sixteen_sp" />

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/ten_dp"
            android:text="We are trying to retrieve yout OTP \n Please Wait..."
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen_sp" />

       <LinearLayout
           android:layout_marginTop="@dimen/ten_dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/ll_resend"
           android:visibility="gone"
           android:orientation="vertical">
           <TextView
               android:id="@+id/resend"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/opensans_bold"
               android:text="@string/resend_otp"
               android:layout_gravity="center_horizontal"
               android:textColor="@color/theme_purple"
               android:textSize="@dimen/sixteen_sp" />

           <TextView
               android:layout_centerInParent="true"
               android:layout_width="wrap_content"
               android:layout_marginTop="@dimen/twenty_dp"
               android:layout_height="wrap_content"
               android:fontFamily="@font/opensans_bold"
               android:text="Or"
               android:layout_gravity="center_horizontal"
               android:textColor="@color/black_dark"
               android:textSize="14sp" />

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/fifty_dp"
               android:layout_marginStart="@dimen/twenty_dp"
               android:layout_marginTop="@dimen/twenty_dp"
               android:layout_marginEnd="@dimen/twenty_dp"
               android:layout_marginBottom="@dimen/twenty_dp"
               android:background="@drawable/round_button_box"
               android:backgroundTint="@color/green_100">

               <ImageView
                   android:layout_centerVertical="true"
                   android:layout_toLeftOf="@+id/btnVerify"
                   android:layout_width="@dimen/thirty_dp"
                   android:layout_marginRight="@dimen/ten_dp"
                   android:layout_height="@dimen/thirty_dp"
                   android:src="@drawable/ic_whatsapp" />

               <TextView
                   android:id="@+id/btnVerify"
                   android:layout_centerInParent="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/opensans_bold"
                   android:text="WhatsApp"
                   android:textColor="@color/white_color"
                   android:textSize="17sp" />
           </RelativeLayout>
       </LinearLayout>
    </LinearLayout>




</RelativeLayout>