<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/ten_sp"
android:id="@+id/card_layout"
app:cardBackgroundColor="@color/white_color"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/ten_sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:layout_margin="@dimen/ten_sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:padding="@dimen/five_dp"
            android:layout_height="@dimen/seventy_dp"
            android:src="@drawable/ic_pdf_file"></ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error_player"
            android:textSize="@dimen/fifteen_sp"
            android:layout_weight="5"
            android:padding="@dimen/two_dp"
            android:textStyle="bold"
            android:id="@+id/txt_score"
            android:layout_gravity="center"
            android:textColor="@color/black_color"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10MB"
                android:textSize="@dimen/fifteen_sp"
                android:layout_weight="4"
                android:padding="@dimen/two_dp"
                android:id="@+id/txt_size"
                android:layout_gravity="center"
                android:textColor="@color/black_color"></TextView>

        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"

            android:padding="@dimen/five_dp"
            android:id="@+id/delete_item"
            android:src="@drawable/ic_baseline_delete_outline_24"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"


            android:padding="@dimen/six_dp"
            android:id="@+id/video_play"
            android:src="@drawable/file_pdf"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>