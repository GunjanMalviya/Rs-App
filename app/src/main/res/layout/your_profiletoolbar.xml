<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/white_color"

    android:contentInsetEnd="@dimen/zero_dp"
    android:contentInsetRight="@dimen/zero_dp"
    android:contentInsetStart="@dimen/zero_dp"
    app:contentInsetEnd="@dimen/zero_dp"
    app:contentInsetLeft="@dimen/zero_dp"
    app:contentInsetRight="@dimen/zero_dp"
    app:contentInsetStart="@dimen/zero_dp"
    android:titleMarginStart="@dimen/fifteen_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_dp"
            android:layout_weight=".5"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            app:tint="@color/black_dark"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_toRightOf="@+id/imgBack"
            android:layout_centerInParent="true"
            android:layout_width="0dp"
            android:layout_weight="3.7"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textStyle="bold"
            android:text="xy"
            android:textSize="@dimen/eighteen_sp"
            android:paddingLeft="@dimen/ten_sp"
            android:paddingRight="@dimen/five_dp"
            android:layout_marginRight="@dimen/twenty_dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black_color"

            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="@dimen/thirty_five_sp"
            android:padding="@dimen/five_dp"

            android:layout_toRightOf="@id/tv_toolbar_title"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            app:tint="@color/overlay_dark_30"
            android:src="@drawable/ic_settings"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_alignParentBottom="true"
        android:background="@color/overlay_dark_20"/>
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>
