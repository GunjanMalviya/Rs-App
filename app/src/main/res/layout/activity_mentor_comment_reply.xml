<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey">
<include layout="@layout/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/sixty_dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    app:cardBackgroundColor="@color/white_color"

                    android:id="@+id/card_liveVideo">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="8"
                            android:id="@+id/nav_prof"

                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/userImage_imageView"
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:padding="@dimen/five_dp"
                                android:layout_height="@dimen/sixty_dp"
                                app:civ_border_width="@dimen/two_dp"
                                app:civ_border_color="@color/theme_purple"
                                android:src="@drawable/ic_baseline_account_circle_24" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="6.5"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"

                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/ten_sp"
                                    android:text="JK"
                                    android:textColor="@color/black_color"
                                    android:textSize="@dimen/forteen_sp"
                                    android:id="@+id/txt_userNm"
                                    android:textStyle="bold"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/spacing_medium"
                                    android:paddingLeft="@dimen/ten_sp"
                                    android:text="@string/time"
                                    android:textColor="@color/blue_grey_800"
                                    android:textSize="@dimen/twelve_sp"
                                    android:id="@+id/txt_time"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/forty_dp"

                            android:padding="@dimen/ten_sp"

                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/time"
                                android:fontFamily="@font/poppins"
                                android:layout_weight="1.8"
                                android:id="@+id/txt_title"
                                android:layout_gravity="center"
                                android:textSize="@dimen/sixteen_sp"
                                android:textStyle="bold"


                                android:textColor="@color/black_color"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:weightSum="4"
                            android:visibility="visible"
                            android:layout_marginLeft="@dimen/forty_dp"
                            android:padding="@dimen/three_dp"
                            android:layout_marginTop="@dimen/two_dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:id="@+id/llout_upvotes"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight=".5"
                                    android:layout_height="@dimen/twenty_sp"
                                    android:src="@drawable/ic_like_n"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/poppins"
                                    android:textSize="@dimen/twelve_sp"
                                    android:textColor="@color/overlay_dark_50"
                                    android:text="UPVOTES"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2.0"
                                android:id="@+id/llout_comments"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_weight=".5"
                                    android:layout_height="@dimen/twenty_sp"

                                    android:src="@drawable/ic_baseline_reply_24"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/twelve_sp"
                                    android:textColor="@color/overlay_dark_50"
                                    android:fontFamily="@font/poppins"
                                    android:text="REPLY"/>
                            </LinearLayout>

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/five_dp"
                            android:layout_marginBottom="@dimen/five_dp"
                            android:layout_marginLeft="@dimen/thirty_five_sp"
                            android:background="@color/overlay_dark_30"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Replies.."
    android:textStyle="bold"
    android:layout_marginTop="@dimen/two_dp"
    android:textColor="@color/black_color"
    android:textSize="@dimen/eighteen_sp"
    android:padding="@dimen/ten_sp"
    android:background="@color/white_color"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/sixty_dp"
                android:id="@+id/recy_exam_series"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/hundred_dp"
                android:id="@+id/lnr_layout"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:src="@drawable/no_data"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Record Found !!"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/aclonica"
                    android:textSize="@dimen/twenty_sp"
                    android:textColor="@color/blue_grey_900"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/bottomrd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/five_dp"
        android:background="@drawable/edittext_chat_bg">

        <EditText
            android:id="@+id/edt_sent1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:digits="qwertyuiopasdfghjklzxcvbnm 1234567890 QWERTYUIOPASDFGHJKLZXCVBNM ,.:;'@  "
            android:hint="Write a comment.."
            android:imeOptions="actionGo"
            android:layout_toLeftOf="@id/btn_sent1"
            android:inputType="text"
            android:singleLine="true"
            android:ems="10"
            android:textColor="@color/black_color"
            android:textColorHint="@color/black_color"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="@dimen/twenty_dp"
            android:textSize="@dimen/fifteen_sp" />

        <ImageButton
            android:id="@+id/btn_sent1"
            android:layout_width="20dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_sent"
            android:padding="3dp"></ImageButton>
    </RelativeLayout>

</RelativeLayout>