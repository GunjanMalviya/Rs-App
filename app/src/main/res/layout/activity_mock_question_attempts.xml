<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey"
    >
    <include layout="@layout/quiz_test_toolbar"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/two_dp"
        android:layout_marginLeft="@dimen/two_dp"
        android:layout_marginTop="@dimen/two_dp"
        android:layout_marginRight="@dimen/two_dp"
        android:id="@+id/recy_subject">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/scroll_i"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fifty_dp"
                    android:layout_marginLeft="@dimen/two_dp"
                    android:layout_marginTop="@dimen/two_dp"
                    android:layout_marginRight="@dimen/two_dp"
                    android:id="@+id/recy_question_series">

                </androidx.recyclerview.widget.RecyclerView>



            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/thirty_sp"
            android:id="@+id/rbl_out"
            android:layout_marginLeft="@dimen/thirty_sp"
            android:visibility="gone"
            android:layout_marginRight="@dimen/thirty_sp"
            android:layout_marginBottom="@dimen/thirty_sp"
            android:background="@drawable/round_button"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/twenty_sp"
                android:textAllCaps="true"
                android:paddingTop="@dimen/ten_sp"
                android:paddingBottom="@dimen/ten_sp"
                android:textStyle="bold"

                android:textColor="@color/white_color"/>


        </RelativeLayout>
        <include layout="@layout/take_exam_bottom" />

    </RelativeLayout>

</LinearLayout>