<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/six_dp"
    android:id="@+id/card_layout"
    app:cardBackgroundColor="@color/white_color"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/six_dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:layout_margin="@dimen/ten_sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7.5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/video_play"
            android:layout_gravity="center"
            android:padding="@dimen/five_dp"
         android:adjustViewBounds="true"
            android:layout_height="@dimen/hundred_dp"
            android:src="@drawable/my_logo"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error_player"
            android:textSize="@dimen/fifteen_sp"
            android:layout_weight="5"
            android:padding="@dimen/five_dp"
            android:textStyle="bold"
            android:id="@+id/txt_score"
            android:layout_gravity="center"
            android:textColor="@color/black_color"></TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:layout_height="wrap_content"

            android:id="@+id/delete_item"
            android:src="@drawable/ic_baseline_more_vert_24"/>

    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="@dimen/twenty_five_sp"
        android:background="@drawable/shape_circle"
        android:layout_gravity="center"
        android:gravity="center"

       android:layout_marginRight="@dimen/ten_sp"
        android:layout_marginBottom="@dimen/twenty_sp"
        android:layout_marginTop="@dimen/ten_sp"
        android:layout_height="@dimen/twenty_five_sp">
        <ImageView
            android:layout_width="@dimen/twenty_five_sp"
            android:layout_height="@dimen/twenty_five_sp"
            android:id="@+id/img_video_play"
            android:src="@drawable/video"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>