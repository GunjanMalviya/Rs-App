<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/ten_sp"
        android:id="@+id/card_preexam_subcat"
        app:cardBackgroundColor="@color/white_color"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/five_dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_course"
                android:padding="@dimen/ten_sp"
                android:id="@+id/imageLogo"

                android:layout_weight="1.2"></ImageView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textSize="@dimen/eighteen_sp"
                    android:id="@+id/txtTitleExam"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/black_color"
                    android:paddingLeft="@dimen/ten_sp"
                    android:paddingTop="@dimen/ten_sp"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:paddingLeft="@dimen/ten_sp"
                    android:textSize="@dimen/sixteen_sp"
                    android:maxLines="1"
                    android:id="@+id/txtSubTitleExam"
                    android:textColor="@color/theme_purple"
                    android:paddingBottom="@dimen/ten_sp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:paddingRight="@dimen/five_dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrowright"
                android:layout_gravity="center"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>