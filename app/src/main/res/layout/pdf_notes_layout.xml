<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btn_privacy_policy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white_color"
    app:cardCornerRadius="@dimen/five_dp"
    app:cardElevation="@dimen/ten_sp"
    android:layout_margin="@dimen/eight_dp">

    <LinearLayout
        android:id="@+id/llout_pdf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_gravity="center"
            android:background="@drawable/primary_oval"
            android:backgroundTint="@color/blue_50"
            android:gravity="center"
            android:layout_marginLeft="@dimen/ten_dp"
            android:padding="@dimen/ten_sp"
            android:src="@drawable/ic_book2" />

        <TextView
            android:id="@+id/txt_pdf"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/eight_dp"
            android:fontFamily="@font/myriadpro_semibold"
            android:gravity="center_vertical"
            android:text="@string/privacy_policy"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black_color"
            android:textSize="@dimen/fifteen_sp" />

        <ImageView
            android:layout_gravity="center_vertical|end"
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/ic_navigate_next_primary_24dp" />


    </LinearLayout>

