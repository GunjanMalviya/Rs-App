<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey">

    <LinearLayout
        android:layout_marginTop="@dimen/five_dp"
        android:background="@color/white_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_sp"
            android:paddingLeft="@dimen/ten_sp"
            android:text="My Learning"
            android:textColor="@color/black_color"
            android:textSize="@dimen/eighteen_sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:paddingLeft="@dimen/ten_sp"
            android:text="A quick access features related to your study"
            android:textColor="@color/black_dark"
            android:textSize="@dimen/forteen_sp"
            />

        <LinearLayout
            android:layout_margin="@dimen/eight_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/fifty_five_dp"
                app:cardBackgroundColor="@color/white_color"
                android:layout_margin="@dimen/five_dp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/eight_dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/deep_purple_50"
                    android:layout_margin="@dimen/two_dp"
                    app:cardCornerRadius="@dimen/eight_dp">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:src="@drawable/ic_book"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Learning"
                        android:layout_marginLeft="@dimen/eight_dp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/forteen_sp"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/fifty_five_dp"
                app:cardBackgroundColor="@color/white_color"
                android:layout_margin="@dimen/five_dp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/eight_dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/deep_orange_50"
                    android:layout_margin="@dimen/two_dp"
                    app:cardCornerRadius="@dimen/eight_dp">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:src="@drawable/ic_book"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Learning"
                        android:layout_marginLeft="@dimen/eight_dp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/forteen_sp"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/eight_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/fifty_five_dp"
                app:cardBackgroundColor="@color/white_color"
                android:layout_margin="@dimen/five_dp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/eight_dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/light_green_50"
                    android:layout_margin="@dimen/two_dp"
                    app:cardCornerRadius="@dimen/eight_dp">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:src="@drawable/ic_book"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Doubts"
                        android:layout_marginLeft="@dimen/eight_dp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/forteen_sp"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/fifty_five_dp"
                app:cardBackgroundColor="@color/white_color"
                android:layout_margin="@dimen/five_dp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/eight_dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/brown_50"
                    android:layout_margin="@dimen/two_dp"
                    app:cardCornerRadius="@dimen/eight_dp">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:src="@drawable/ic_book"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Downloads"
                        android:layout_marginLeft="@dimen/eight_dp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/forteen_sp"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_dp"
        android:paddingLeft="@dimen/ten_sp"
        android:text="Padho chahe kahi se, manzil milegi yahi se..."
        android:textColor="@color/black_dark"
        android:textSize="@dimen/sixteen_dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:paddingLeft="@dimen/ten_sp"
        android:text="from Rankers Point"
        android:textColor="@color/black_dark"
        android:textSize="@dimen/twelve_dp"
        android:textStyle="bold" />

</LinearLayout>