<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:background="@color/white_color"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/class_spinner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginStart="@dimen/eight_dp"
                android:spinnerMode="dropdown" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                android:paddingLeft="@dimen/forteen_dp"
                android:text="Today's Class"
                android:textColor="@color/black"
                android:textSize="@dimen/sixteen_dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:layout_margin="@dimen/twenty_dp"
                android:background="@color/white_color"
                app:cardCornerRadius="@dimen/eight_dp"
                app:cardElevation="@dimen/ten_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="No Class scheduled!"
                    android:textColor="@color/black"
                    android:textSize="@dimen/forteen_sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/twelve_dp"
                android:text="View All Classes >"
                android:textColor="@color/theme_purple"
                android:textSize="@dimen/forteen_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/light_grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_sp"
                android:paddingLeft="@dimen/ten_sp"
                android:text="My Learning"
                android:textColor="@color/black_color"
                android:textSize="@dimen/eighteen_sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:paddingLeft="@dimen/ten_sp"
                android:text="A quick access features related to your study"
                android:textColor="@color/black_dark"
                android:textSize="@dimen/forteen_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight_dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fifty_five_dp"
                    android:layout_margin="@dimen/five_dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white_color"
                    app:cardCornerRadius="@dimen/eight_dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/two_dp"
                        app:cardBackgroundColor="@color/deep_purple_50"
                        app:cardCornerRadius="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="@dimen/thirty_dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:src="@drawable/ic_book" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/eight_dp"
                            android:text="My Learning"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/forteen_sp" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fifty_five_dp"
                    android:layout_margin="@dimen/five_dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white_color"
                    app:cardCornerRadius="@dimen/eight_dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/two_dp"
                        app:cardBackgroundColor="@color/deep_orange_50"
                        app:cardCornerRadius="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="@dimen/thirty_dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:src="@drawable/ic_book" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/eight_dp"
                            android:text="Recent Learning"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/forteen_sp" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight_dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fifty_five_dp"
                    android:layout_margin="@dimen/five_dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white_color"
                    app:cardCornerRadius="@dimen/eight_dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/two_dp"
                        app:cardBackgroundColor="@color/light_green_50"
                        app:cardCornerRadius="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="@dimen/thirty_dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:src="@drawable/ic_book" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/eight_dp"
                            android:text="My Doubts"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/forteen_sp" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/fifty_five_dp"
                    android:layout_margin="@dimen/five_dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white_color"
                    app:cardCornerRadius="@dimen/eight_dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/two_dp"
                        app:cardBackgroundColor="@color/brown_50"
                        app:cardCornerRadius="@dimen/eight_dp">

                        <ImageView
                            android:layout_width="@dimen/thirty_dp"
                            android:layout_height="@dimen/thirty_dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:src="@drawable/ic_book" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/eight_dp"
                            android:text="My Downloads"
                            android:textColor="@color/black_color"
                            android:textSize="@dimen/forteen_sp" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/light_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:elevation="@dimen/ten_dp"
                    android:src="@color/wallet_holo_blue_light" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/ten_sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Micro-Learning"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sixteen_dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fun way of learning"
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/twelve_dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:gravity="end"
                    android:text="Watch all"
                    android:textColor="@color/theme_purple"
                    android:textSize="@dimen/forteen_dp" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/shapeLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten_dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="180dp"
                        android:layout_margin="@dimen/three_dp"
                        app:cardBackgroundColor="@color/black_dark"
                        app:cardCornerRadius="@dimen/five_dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="165dp"
                                android:layout_height="220dp"
                                android:src="@drawable/my_logo"
                                app:civ_circle_background_color="@color/grey_trans" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="180dp"
                        android:layout_margin="@dimen/three_dp"
                        app:cardBackgroundColor="@color/black_dark"
                        app:cardCornerRadius="@dimen/five_dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="165dp"
                                android:layout_height="220dp"
                                android:src="@drawable/my_logo"
                                app:civ_circle_background_color="@color/grey_trans" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="180dp"
                        android:layout_margin="@dimen/three_dp"
                        app:cardBackgroundColor="@color/black_dark"
                        app:cardCornerRadius="@dimen/five_dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="165dp"
                                android:layout_height="220dp"
                                android:src="@drawable/my_logo"
                                app:civ_circle_background_color="@color/grey_trans" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="180dp"
                        android:layout_margin="@dimen/three_dp"
                        app:cardBackgroundColor="@color/black_dark"
                        app:cardCornerRadius="@dimen/five_dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="165dp"
                                android:layout_height="220dp"
                                android:src="@drawable/my_logo"
                                app:civ_circle_background_color="@color/grey_trans" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </HorizontalScrollView>


        </LinearLayout>

    </ScrollView>

</LinearLayout>