<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white_color"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/splash_blue_yellow" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/spacing_mlarge">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/one_fifty_dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/my_logo" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_middle"
            android:visibility="visible"
            app:cardBackgroundColor="@color/white_color"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_mlarge">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="OTP Verification"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:fontFamily="@font/opensans_bold"></TextView>

                <LinearLayout
                    android:id="@+id/ll_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="#fff"
                        app:cardBackgroundColor="#fff">
                        <LinearLayout
                            android:id="@+id/ll_mob"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="+91"
                                android:paddingLeft="15dp"
                                android:textColorHint="#A6A4A4"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:fontFamily="@font/opensans_regular"></TextView>

                            <TextView
                                android:id="@+id/txt_mobile"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="9876543210"
                                android:paddingLeft="5dp"
                                android:textColorHint="#A6A4A4"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:maxLength="10"
                                android:inputType="phone"
                                android:digits="1234567890"
                                android:fontFamily="@font/opensans_regular"></TextView>

                            <LinearLayout
                                android:id="@+id/ll_edit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center|end"
                                android:layout_marginRight="15dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/txtEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Edit"
                                    android:visibility="gone"
                                    android:paddingRight="5dp"
                                    android:textColor="#320570"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/opensans_semibold"></TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginBottom="5dp"
                                android:background="#fff"
                                app:cardBackgroundColor="#fff">
                                <EditText
                                    android:id="@+id/et_otp"
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:background="@color/white_color"
                                    android:hint="XXXXXX"
                                    android:letterSpacing="0.5"
                                    android:paddingLeft="15dp"
                                    android:textColorHint="@color/overlay_dark_40"
                                    android:textColor="#000"
                                    android:inputType="phone"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/opensans_regular"></EditText>
                            </androidx.cardview.widget.CardView>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/txt_otp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-60dp"
                            android:layout_marginLeft="15dp"
                            android:paddingRight="7dp"
                            android:paddingLeft="7dp"
                            android:text="Enter OTP"
                            android:gravity="center"
                            android:background="@drawable/rounded_shape"
                            android:backgroundTint="#fff"
                            android:textSize="13sp"
                            android:textColor="#000"
                            android:fontFamily="@font/opensans_semibold"></TextView>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnVerify"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="20dp"                    android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:text="Verify"
                        android:textAllCaps="true"
                        android:textSize="17sp"
                        android:textColor="#fff"
                        android:background="@drawable/btn_rounded_primary"
                        android:fontFamily="@font/opensans_bold"></Button>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/twenty_sp"
                    android:layout_marginRight="@dimen/twenty_sp"
                    android:layout_marginTop="@dimen/forty_dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/twenty_five_sp"
                        android:layout_height="@dimen/twenty_five_sp"

                        android:layout_gravity="center"
                        android:id="@+id/img_times"
                        android:src="@drawable/ic_message"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/BtnResend"
                        android:text="Resend OTP"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="@dimen/ten_sp"
                        android:textSize="@dimen/forteen_sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/overlay_dark_50"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_timer"
                        android:text="00:00"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="@dimen/ten_sp"
                        android:textSize="@dimen/forteen_sp"
                        android:gravity="right"
                        android:layout_gravity="center"
                        android:textColor="@color/overlay_dark_70"
                        />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_large" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


    </RelativeLayout>

</RelativeLayout>