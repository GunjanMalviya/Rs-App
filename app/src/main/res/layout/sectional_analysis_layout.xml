<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/six_dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white_color"
    app:cardCornerRadius="@dimen/six_dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"

            android:padding="@dimen/ten_sp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textStyle="bold"
                android:id="@+id/txt_texttitle"
                android:textColor="@color/black_color"
                android:textSize="@dimen/fifteen_sp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/fifteen_sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textStyle="bold"
                    android:id="@+id/txt_score"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/fifteen_sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title"
                        android:id="@+id/txt_marks"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/forteen_sp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:background="@color/overlay_dark_50"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/two_dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:padding="@dimen/five_dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/twenty_sp"
                    android:layout_height="@dimen/twenty_sp"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:src="@drawable/ic_outline_check_circle_24"
                    app:tint="@color/black_color"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/correct"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/forteen_sp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/correct"
                    android:padding="@dimen/five_dp"
                    android:id="@+id/txt_correct"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/forteen_sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:padding="@dimen/five_dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/twenty_sp"
                        android:layout_height="@dimen/twenty_sp"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:src="@drawable/ic_outline_cancel_24"
                        app:tint="@color/black_color"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wrong"
                        android:layout_marginLeft="@dimen/ten_sp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/forteen_sp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/wrong"
                    android:padding="@dimen/five_dp"
                    android:id="@+id/txt_wrong"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/forteen_sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:padding="@dimen/five_dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/twenty_sp"
                        android:layout_height="@dimen/twenty_sp"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:src="@drawable/ic_baseline_remove_circle_outline_24"
                        app:tint="@color/black_color"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/skip"
                        android:layout_marginLeft="@dimen/ten_sp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/forteen_sp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/wrong"
                    android:padding="@dimen/five_dp"
                    android:id="@+id/txt_skip"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/forteen_sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:padding="@dimen/five_dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/twenty_sp"
                        android:layout_height="@dimen/twenty_sp"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:padding="@dimen/two_dp"
                        android:src="@drawable/circle_percentage"
                        app:tint="@color/black_color"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/percentile"

                        android:layout_marginLeft="@dimen/ten_sp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/forteen_sp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/wrong"
                    android:padding="@dimen/five_dp"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:textColor="@color/black_color"
                    android:id="@+id/txt_percentage"
                    android:textSize="@dimen/forteen_sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:padding="@dimen/five_dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/twenty_sp"
                        android:layout_height="@dimen/twenty_sp"
                        android:layout_marginLeft="@dimen/five_dp"

                        android:src="@drawable/ic_baseline_my_location_24"
                        app:tint="@color/black_color"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/accuracy"

                        android:layout_marginLeft="@dimen/ten_sp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/forteen_sp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/wrong"
                    android:padding="@dimen/five_dp"
                    android:id="@+id/txt_accuracy"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/forteen_sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:padding="@dimen/five_dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/twenty_two_dp"
                        android:layout_height="@dimen/twenty_two_dp"
                        android:layout_marginLeft="@dimen/five_dp"

                        android:src="@drawable/ic_baseline_access_time_24"
                        app:tint="@color/black_color"></ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/time_take"

                        android:layout_marginLeft="@dimen/ten_sp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/forteen_sp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/wrong"
                    android:id="@+id/txt_timetaken"
                    android:padding="@dimen/five_dp"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/forteen_sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>