<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
        app:cardCornerRadius="@dimen/five_dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white_color"
        app:cardElevation="@dimen/five_dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:id="@+id/llout_video_series"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/two_dp"
                        android:background="@color/overlay_dark_10"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:padding="@dimen/ten_sp"

                    android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/image_video"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:src="@drawable/slider04"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:layout_height="@dimen/seventy_dp"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/ten_sp"
                            android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                        android:text="@string/live_class"
                                        android:textSize="@dimen/sixteen_sp"
                                    android:id="@+id/classe_txt"
                                        android:textStyle="bold"
                                        android:textColor="@color/black_color"/>

                        </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/two_dp"
                    android:background="@color/overlay_dark_10"/>
        </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="@dimen/sixty_dp"
            android:layout_height="@dimen/sixty_dp"
            android:background="@drawable/ribbon"
            android:layout_marginLeft="-5dp"
            android:backgroundTint="@color/amber_100"
            android:layout_marginTop="-5dp"
            android:rotation="-45">
                <TextView

                    android:text="@string/paid"
                    android:textStyle="bold"
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen_sp"
                    android:layout_marginTop="@dimen/twenty_sp"
                    android:textSize="@dimen/fifteen_sp"

                    android:textColor="@color/theme_purple"

                    />
        </LinearLayout>

<RelativeLayout
    android:layout_width="@dimen/twenty_five_sp"
    android:background="@drawable/shape_circle"
  android:layout_marginTop="@dimen/thirty_five_sp"
    android:layout_marginLeft="@dimen/sixty_three_dp"
    android:layout_height="@dimen/twenty_five_sp">
        <ImageView
            android:layout_width="@dimen/twenty_five_sp"
            android:layout_height="@dimen/twenty_five_sp"
                android:src="@drawable/video"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>