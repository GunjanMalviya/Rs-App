<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/five_dp"
        app:cardElevation="@dimen/five_dp"
        android:id="@+id/card_liveVideo">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/banner_image"
            android:layout_width="match_parent"
            android:src="@drawable/slider04"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_height="150dp"/>

</LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Started at 9:00AM"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingRight="@dimen/ten_sp"
                    android:paddingLeft="@dimen/ten_sp"
                    android:id="@+id/txt_start"
                    android:textSize="@dimen/twelve_sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/ten_sp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/black_color"
                        android:background="@drawable/rounded_shape"/>




        <RelativeLayout
            android:layout_width="@dimen/thirty_sp"
            android:background="@drawable/shape_circle"
            android:layout_gravity="right|bottom"

            android:layout_marginRight="@dimen/five_dp"
        android:layout_marginBottom="@dimen/five_dp"
            android:layout_height="@dimen/thirty_sp">
                <ImageView
                    android:layout_width="@dimen/forty_dp"
                    android:layout_height="@dimen/forty_dp"

                    android:src="@drawable/video"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="@dimen/seventy_dp"
        android:layout_height="@dimen/seventy_dp"
        android:background="@drawable/ribbon"
       android:layout_marginLeft="1dp"
        android:backgroundTint="@color/amber_100"
        android:layout_marginTop="4dp"
        android:rotation="-45">
        <TextView

            android:text="@string/paid"
            android:textStyle="bold"
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/seventeen_dp"
            android:layout_marginTop="24dp"
            android:textSize="@dimen/sixteen_sp"

            android:textColor="@color/theme_purple"

            />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/fifty_dp"
        android:layout_height="@dimen/thirty_sp"
        android:layout_alignParentRight="true"
   android:layout_marginRight="@dimen/five_dp"
        android:id="@+id/img_success"

        android:src="@drawable/live_status_video"/>

</RelativeLayout>