<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"

    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_video"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/one_sixty_dp"
                android:layout_gravity="center"
                android:src="@drawable/my_logo" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_sp"
                android:fontFamily="@font/poppins"
                android:padding="@dimen/ten_sp"
                android:text="@string/offline_pay"
                android:textColor="@color/black_color"
                android:textSize="@dimen/eighteen_sp"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five_dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_sp"
                    android:padding="@dimen/ten_sp"
                    android:text="@string/date_time"
                    android:textColor="@color/overlay_dark_60"
                    android:textSize="@dimen/thirteen_sp"></TextView>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/three_dp"
                android:layout_marginTop="@dimen/three_dp"
                android:background="@color/overlay_dark_20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/details_txt1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins"
                    android:lineSpacingExtra="@dimen/ten_sp"
                    android:padding="@dimen/ten_sp"
                    android:text="@string/title"

                    android:textColor="@color/black_color"
                    android:textSize="@dimen/eighteen_sp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/six_dp"
                    android:background="@color/overlay_dark_20" />

                <TextView
                    android:id="@+id/details_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/ten_sp"
                    android:fontFamily="@font/poppins"
                    android:lineSpacingExtra="@dimen/ten_sp"
                    android:padding="@dimen/ten_sp"
                    android:text="@string/title"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/eighteen_sp"></TextView>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_readMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twenty_sp"
                android:drawableRight="@drawable/ic_arrowright"
                android:drawablePadding="@dimen/five_dp"
                android:gravity="center"
                android:padding="@dimen/ten_sp"
                android:text="Click"
                android:textColor="@color/black_color"
                android:textSize="@dimen/twenty_sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/ten_sp"

                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twenty_sp"
                android:layout_marginBottom="@dimen/thirty_sp"
                android:background="@color/overlay_dark_20"
                android:drawablePadding="@dimen/five_dp"
                android:gravity="center"
                android:padding="@dimen/ten_sp"
                android:text="Click"
                android:textColor="@color/overlay_dark_60"
                android:textSize="@dimen/twenty_five_sp"
                android:textStyle="bold"></TextView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>