<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/intro1"
                android:paddingTop="@dimen/ten_sp"
                android:scaleType="fitXY"
                android:id="@+id/imageLogo"
                android:paddingRight="@dimen/ten_sp"
                android:layout_weight="1"></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="@dimen/ten_sp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:layout_weight="0.8"
                android:textSize="@dimen/eighteen_sp"
                android:id="@+id/txtRegEndDate"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/two_dp"
                android:textColor="@color/black_color"
                android:paddingLeft="@dimen/ten_sp"
              ></TextView>
                <TextView
                    android:layout_width="2dp"
                    android:layout_height="@dimen/thirty_sp"
                    android:background="@color/grey_300"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:layout_weight="1.2"
                    android:layout_marginTop="@dimen/two_dp"
                    android:textSize="@dimen/forteen_sp"
                    android:id="@+id/txtLAnguage"
                    android:layout_gravity="center"

                    android:textColor="@color/black_dark"
                    android:paddingLeft="@dimen/twenty_sp"
                    ></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:layout_margin="@dimen/ten_sp"
                android:background="@drawable/rounded_skip"
                android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="SKIP"
                        android:textSize="@dimen/sixteen_sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/myriadpro_bold"
                        android:textColor="@color/white_color"
                        android:layout_gravity="center"
                        android:gravity="center"/>
            </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/description"

    android:textSize="@dimen/fifteen_sp"
    android:fontFamily="@font/cousine"
    android:textColor="@color/black_color"
    android:layout_marginLeft="@dimen/ten_sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two_dp"
                    android:layout_weight="0.5"

                    android:paddingLeft="@dimen/ten_sp"
                    android:src="@drawable/ic_outline_info_24"
                    android:text="@string/title"

                    android:textColor="@color/black_dark"
                    app:tint="@color/theme_purple"></ImageView>

                <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:layout_weight="2.8"
                android:textSize="@dimen/forteen_sp"
                android:id="@+id/txtTeacherNm"
                android:layout_marginTop="@dimen/two_dp"

                android:textColor="@color/black_color"
                android:paddingLeft="@dimen/ten_sp"
                ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two_dp"
                    android:layout_weight="0.5"

                    android:paddingLeft="@dimen/ten_sp"
                    android:src="@drawable/ic_outline_info_24"
                    android:text="@string/title"

                    android:textColor="@color/black_dark"
                    app:tint="@color/theme_purple"></ImageView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:layout_weight="2"
                    android:textSize="@dimen/forteen_sp"
                    android:id="@+id/txtPrice"
                    android:layout_marginTop="@dimen/two_dp"

                    android:textColor="@color/black_color"
                    android:paddingLeft="@dimen/ten_sp"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two_dp"
                    android:layout_weight="0.5"

                    android:paddingLeft="@dimen/ten_sp"
                    android:src="@drawable/ic_outline_info_24"
                    android:text="@string/title"

                    android:textColor="@color/black_dark"
                    app:tint="@color/theme_purple"></ImageView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:layout_weight="2"
                    android:textSize="@dimen/forteen_sp"
                    android:id="@+id/txtlanguageetx"
                    android:layout_marginTop="@dimen/two_dp"

                    android:textColor="@color/black_color"
                    android:paddingLeft="@dimen/ten_sp"
                    ></TextView>
            </LinearLayout>

        </LinearLayout>
        </RelativeLayout>




</RelativeLayout>