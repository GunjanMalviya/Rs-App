<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    tools:context="com.rankerspoint.academy.Fragment.Doubts_Single"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:padding="@dimen/ten_sp"
                android:orientation="horizontal"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userImage"
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    app:civ_border_color="@color/theme_purple"
                    app:civ_border_width="@dimen/two_dp"

                    android:src="@drawable/ic_baseline_account_circle_24"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/doubt_llout"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:background="@drawable/edit_border"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/doubt_box"
                        android:layout_marginTop="@dimen/ten_sp"
                        android:layout_marginLeft="@dimen/twenty_five_sp"
                        android:textSize="@dimen/thirteen_sp"
                        android:textColor="@color/black_color"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/start_typing"

                        android:layout_marginLeft="@dimen/twenty_five_sp"
                        android:textSize="@dimen/twelve_sp"

                        android:layout_marginBottom="@dimen/ten_sp"
                        android:textColor="@color/overlay_dark_70"/>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:background="@color/overlay_dark_20"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:id="@+id/card_my_doubts"
                app:cardBackgroundColor="@color/white_color"
                app:cardCornerRadius="@dimen/five_dp"
                app:cardElevation="@dimen/five_dp"
                app:cardUseCompatPadding="true"
                >

                <!-- <androidx.cardview.widget.CardView
                     android:id="@+id/cardView"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     app:cardCornerRadius="7dp"
                     android:layout_margin="5dp"
                     app:cardBackgroundColor="@color/white">-->

                <LinearLayout
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="@dimen/ten_sp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:weightSum="5"
                            android:paddingTop="@dimen/five_dp"
                            android:paddingBottom="@dimen/five_dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/sno"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                               android:src="@drawable/ic_doubt"
                                android:gravity="center"
                                app:tint="@color/theme_purple"
                                android:layout_marginLeft="@dimen/ten_sp"></ImageView>

                            <TextView
                                android:id="@+id/pNAme"
                                android:layout_width="0dp"
                                android:layout_weight="4.0"
                                android:layout_marginLeft="@dimen/fifteen_sp"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/opensans_regular"
                                android:gravity="center|left"


                                android:text="@string/my_course"

                                android:textStyle="bold"

                                android:textColor="@color/black_color"
                                android:textSize="@dimen/fifteen_sp"></TextView>
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/thirty_sp"
                                android:layout_weight="0.5"

                                android:src="@drawable/ic_arrowright"
                                android:layout_gravity="right"/>


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/course_doubt"
                android:textStyle="bold"
                android:textColor="@color/overlay_dark_80"
                android:textSize="@dimen/sixteen_sp"
                android:layout_margin="@dimen/ten_sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:background="@color/overlay_dark_10"/>
           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_margin="@dimen/ten_sp"

               android:nestedScrollingEnabled="false"
               android:scrollbars="none"
               android:layout_height="340dp"
               android:id="@+id/_recy_doubts_chats_list"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:weightSum="3"
                android:layout_gravity="center"
                android:gravity="center"

                android:visibility="visible"
                android:id="@+id/linearlayout_viewall"
            android:layout_margin="@dimen/twenty_sp"
                android:background="@drawable/rounded_skip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all"
android:textStyle="bold"
                    android:textColor="@color/exo_white"
                    android:textSize="@dimen/sixteen_sp"

                    android:paddingLeft="@dimen/ten_sp"/>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>


</FrameLayout>